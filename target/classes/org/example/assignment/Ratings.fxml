<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.assignment.controller.RatingsController"
            prefWidth="800.0" prefHeight="600.0">

    <top>
        <HBox spacing="10" style="-fx-background-color: #013578;" alignment="CENTER_LEFT">
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
            <Label text="User Ratings" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" />
        </HBox>
    </top>

    <center>
        <VBox spacing="20">
            <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
            <ListView fx:id="ratingsListView" prefHeight="500" />
            <Button fx:id="backButton" text="Back to Dashboard" prefWidth="200" style="-fx-background-color: #84afdb;"/>
        </VBox>
    </center>
</BorderPane>

