<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.assignment.controller.EditRoomController">

    <!-- Main Content -->
    <center>
        <VBox spacing="10.0">
            <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>
            <children>
            <Label text="Edit Rooms">
               <font>
                  <Font size="52.0" />
               </font>
            </Label>
                <Label style="-fx-font-weight: bold;" text="Name" />
                <TextField fx:id="nameField" promptText="Room Name" text="Single Room" />

                <Label style="-fx-font-weight: bold;" text="Price" />
                <TextField fx:id="priceField" promptText="Price" text="RM100" />

                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <children>
                        <Button fx:id="saveButton" onAction="#handleSave" text="Save" style="-fx-background-color: #95dea8;"/>
                        <Button fx:id="deleteButton" onAction="#handleDelete" text="Delete" style="-fx-background-color: #db6767 ;"  />
                        <Button fx:id="cancelButton" onAction="#handleCancel" text="Cancel" style="-fx-background-color: #e0986e;" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>
</BorderPane>
